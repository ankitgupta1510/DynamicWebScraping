package web;

import java.nio.file.Files;
import java.nio.file.Paths;

import org.json.JSONArray;
import org.json.JSONObject;

public class Extarctjson {
    public static void main(String[] args) {
        try {
            // Step 1: Read the JSON file
            String content = Files.readString(Paths.get("data.json"));
            JSONObject obj = new JSONObject(content);

            // Step 2: Get top-level category array
            JSONArray catArray = obj.getJSONArray("catArray");

            for (int i = 0; i < catArray.length(); i++) {
                JSONObject category = catArray.getJSONObject(i);
                String name = category.getString("name");

                // Look for "Packaged Food"
                if (name.equalsIgnoreCase("Packaged Food")) {
                    JSONArray subCats = category.getJSONArray("subCatArray");

                    for (int j = 0; j < subCats.length(); j++) {
                        JSONObject subCat = subCats.getJSONObject(j);
                        String subCatName = subCat.getString("name");

                        // Look for "Biscuits & Cookies"
                        if (subCatName.equalsIgnoreCase("Biscuits & Cookies")) {
                            System.out.println("Subcategories under 'Biscuits & Cookies':");

                            // Get the sub-sub-categories
                            JSONArray biscuitsArray = subCat.getJSONArray("subCatArray");

                            for (int k = 0; k < biscuitsArray.length(); k++) {
                                JSONObject biscuitItem = biscuitsArray.getJSONObject(k);
                                System.out.println("- " + biscuitItem.getString("name"));
                            }

                            return; // Done after finding & printing
                        }
                    }
                }
            }

            System.out.println("'Biscuits & Cookies' not found.");
        } catch (Exception e) {
            System.out.println("Error: " + e.getMessage());
        }
    }
}
