package crawlerDesign;


public class ProductData {
    private String category;
    private String name;
    private double variantWeight;
    private double priceMRP;
    private double priceSale;
    
    public ProductData(String category, String name, double variantWeight, 
                      double priceMRP, double priceSale) {
        this.category = category;
        this.name = name;
        this.variantWeight = variantWeight;
        this.priceMRP = priceMRP;
        this.priceSale = priceSale;
    }
    
    @Override
    public String toString() {
        return String.format("Category: %s | Product: %s | Weight: %.1fg | MRP: ₹%.2f | Sale: ₹%.2f", 
                           category, name, variantWeight, priceMRP, priceSale);
    }
    
    // Getters
    public String getCategory() { return category; }
    public String getName() { return name; }
    public double getVariantWeight() { return variantWeight; }
    public double getPriceMRP() { return priceMRP; }
    public double getPriceSale() { return priceSale; }
}

