package web;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;

public class Webscrapper2 {
    
    public static void main(String[] args) {
        String url = "https://www.dmart.in/category/biscuits---cookies-aesc-biscuitsandcookies";
        
        try {
            Document doc = Jsoup.connect(url)
                    .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) Chrome/120.0.0.0")
                    .timeout(10000)
                    .get();
            
            System.out.println("Page title: " + doc.title());
            System.out.println("HTML length: " + doc.html().length());
            
            // Look for any elements containing rupee symbol
            Elements priceElements = doc.select("*:contains(₹)");
            System.out.println("Elements with ₹ symbol: " + priceElements.size());
            
            // Print first few elements with prices
            for (int i = 0; i < Math.min(5, priceElements.size()); i++) {
                System.out.println("Price element " + (i+1) + ": " + 
                    priceElements.get(i).text());
            }
            
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
