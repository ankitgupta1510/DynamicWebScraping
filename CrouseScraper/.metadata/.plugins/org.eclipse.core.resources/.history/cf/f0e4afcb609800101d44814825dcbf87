package flow;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;
import org.json.JSONObject;

public class MainApp {
    public static void main(String[] args) {
        try {
            String apiUrl = "https://www.policybazaar.com/services/get_health_plan_v2.php?group_id=1&qtype=tab&profileType=3&show_plan_count=5";

            // Fetch raw JSON
            String rawJson = Jsoup.connect(apiUrl)
                    .ignoreContentType(true)
                    .userAgent("Mozilla/5.0")
                    .timeout(15000)
                    .execute()
                    .body();

            // Parse JSON
            JSONObject json = new JSONObject(rawJson);
            String planHtml = json.getString("plan_content");

            // Parse HTML fragment
            Document doc = Jsoup.parse(planHtml);

            // Each plan card
            Elements cards = doc.select("div.card");

            for (Element card : cards) {
                String name = card.select("div.plan-name").text();
                String cover = card.select("div:contains(Cover amount) + div").text();
                String price = card.select("div:contains(Starting at) + div").text();

                if (!name.isEmpty()) {
                    System.out.printf("Plan: %s | Cover: %s | Price: %s%n",
                            name, cover, price);
                }
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
