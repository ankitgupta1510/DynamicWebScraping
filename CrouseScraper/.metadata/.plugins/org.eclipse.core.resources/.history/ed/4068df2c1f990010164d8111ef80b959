package flow;

import org.jsoup.Connection;
import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

public class MainApp {
    public static void main(String[] args) {
        String url = "https://www.policybazaar.com/services/gettermservices.php";
        String payload = "{\"task\":\"topplanswithfeatureandfilter\",\"isfilter\":1,"
                + "\"pagename\":\"Buy Best Term Insurance Plan <sup>~</sup>\","
                + "\"isnri\":false}";

        try {
                        Connection.Response response = Jsoup.connect(url)
                    .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64)")
                    .header("Accept", "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8")
	                .header("Accept-Language", "en-US,en;q=0.5")
                    .ignoreContentType(true)  
                    .timeout(15000)
                    .requestBody(payload)
                    .method(Connection.Method.POST)
                    .execute();

            // Direct HTML response
            String htmlContent = response.body();

            // Parse HTML
            Document doc = Jsoup.parse(htmlContent);
            Elements plans = doc.select("div.top-plan-card");

            int count = 1;
            for (Element plan : plans) {
                String name = plan.select(".plan-name").text();
                String lifeCover = plan.select(".life-cover p:nth-of-type(2)").text();
                String maxLimit = plan.select(".life-cover p:nth-of-type(3)").text();
                String claim = plan.select(".claim-settlement:contains(Claim Settled) p:nth-of-type(2)").text();
                String premium = plan.select(".claim-settlement:contains(Premium Starting) p:nth-of-type(2)").text();

                System.out.println("--------------------------------------------------");
                System.out.println(count++ + ". " + name);
                System.out.println("   Life Cover: " + lifeCover);
                System.out.println("   " + maxLimit);
                System.out.println("   Claim Settled: " + claim);
                System.out.println("   Premium Starting: " + premium);
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
