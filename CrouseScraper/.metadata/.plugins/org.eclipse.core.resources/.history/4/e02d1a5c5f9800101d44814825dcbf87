package flow;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.json.JSONObject;

public class MainTable {
    public static void main(String[] args) {
        try {
            String apiUrl = "https://www.policybazaar.com/services/get_health_plan_v2.php?group_id=1&qtype=tab&profileType=3&show_plan_count=3";

            // ✅ Directly fetch raw response using Jsoup
            String rawJson = Jsoup.connect(apiUrl)
                    .ignoreContentType(true)   // important for JSON
                    .userAgent("Mozilla/5.0")
                    .header("Accept", "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8")
                    .header("Accept-Language", "en-US,en;q=0.5")
                    .timeout(15000)
                    .execute()
                    .body();

            // Print raw JSON to confirm
            System.out.println("RAW JSON:\n" + rawJson.substring(0, Math.min(500, rawJson.length())));

            // ✅ Parse JSON
            JSONObject json = new JSONObject(rawJson);
            String planHtml = json.getString("plan_content");

            // Print extracted HTML
            System.out.println("\nPLAN HTML:\n" + planHtml.substring(0, Math.min(500, planHtml.length())));

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
