package flow;

import org.jsoup.Connection;
import org.jsoup.Jsoup;
import org.jsoup.Connection.Response;
import org.jsoup.nodes.Document;

public class MainTestCheck {

    public static void main(String[] args) {
        String bikeUrl = "https://www.policybazaar.com/policybazzar-home/callservice.php";

        // ✅ Actual payload (form-urlencoded)
        String bikePayload = "task=homeinsuranceTopplanwidget&visitId=";

        try {
            Response response = Jsoup.connect(bikeUrl)
                .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64)")
                .header("Accept", "application/json, text/plain, */*")
                .header("Content-Type", "application/x-www-form-urlencoded") // ✅ correct for this case
                .ignoreContentType(true)
                .timeout(15000)
                .requestBody(bikePayload)   // ✅ send as form data
                .method(Connection.Method.POST)
                .execute();
                
            String jsonResponse = response.body();
            System.out.println("Response: " + jsonResponse);

            // Agar API HTML return kare
            Document doc = Jsoup.parse(jsonResponse);
            System.out.println("Title: " + doc.title());

        } catch (Exception e) {
            System.err.println("Error processing plan: " + e.getMessage());
        }
    }
}
