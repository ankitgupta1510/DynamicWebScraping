package flow;

import org.jsoup.Connection;
import org.jsoup.Jsoup;
import org.json.JSONArray;
import org.json.JSONObject;

public class MainApp {

    public static void main(String[] args) {
        String url = "https://www.policybazaar.com/services/gettermservices.php";
        String payload = "{\"task\":\"topplanswithfeatureandfilter\",\"isfilter\":1,"
                + "\"pagename\":\"Buy Best Term Insurance Plan <sup>~</sup>\","
                + "\"isnri\":false}";

        try {
            // POST request
            Connection.Response response = Jsoup.connect(url)
                    .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) "
                            + "AppleWebKit/537.36 (KHTML, like Gecko) "
                            + "Chrome/120.0.0.0 Safari/537.36")
                    .header("Content-Type", "application/json")
                    .header("Accept", "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8")
                    .ignoreContentType(true)
                    .timeout(15000)
                    .requestBody(payload)
                    .method(Connection.Method.POST)
                    .execute();

            // Get raw JSON string
            String jsonStr = response.body();
            System.out.println("RAW RESPONSE:\n" + jsonStr); // debug print

            // ✅ Parse directly as JSONArray
            JSONArray plans = new JSONArray(jsonStr);

            for (int i = 0; i < plans.length(); i++) {
                JSONObject plan = plans.getJSONObject(i);

                String planName = plan.optString("plan_name");
                String cover = plan.optString("cover");
                String maxAge = plan.optString("maxtenureage");
                String claim = plan.optString("claim_settlement_ratio");
                String premium = plan.optString("monthly_premium");

                System.out.println("--------------------------------------------------");
                System.out.println((i + 1) + ". " + planName);
                System.out.println("   Life Cover: ₹" + cover);
                System.out.println("   Max Limit: " + maxAge + " yrs");
                System.out.println("   Claim Settled: " + claim + "%");
                System.out.println("   Premium Starting: ₹" + premium + "/month");

                if (plan.has("benefits")) {
                    JSONArray benefits = plan.getJSONArray("benefits");
                    System.out.print("   Benefits: ");
                    for (int j = 0; j < benefits.length(); j++) {
                        System.out.print(benefits.getString(j));
                        if (j < benefits.length() - 1) System.out.print(", ");
                    }
                    System.out.println();
                }
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
