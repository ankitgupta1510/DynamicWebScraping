package schoolScraper;

import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

public class MainApp {
	public static void main(String [] args) {
//		String baseUrl = "https://school.careers360.com/schools/schools-in-india?page=4&ownership=4%2C3%2C1";
		try {
			boolean hasData = true;
			int pageNum=1;
			while(hasData) {
				
				String url = "https://school.careers360.com/schools/schools-in-india?page=" + pageNum + "&ownership=4%2C3%2C1";
				Document doc = Jsoup.connect(url)
						.userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/108.0.0.0 Safari/537.36")
				        .get();
				
				Elements schoolCard = doc.select("div.schoolListing_card"); 
				
				if(schoolCard.size()==0) {
					System.out.println("No more school cards ending pagination");
					hasData=false;
					break;
				}
				
				for(Element card: schoolCard) {
					String schoolName = card.select("h2.school_name").text();
					String schoolType = card.select("p.school_type").text();
					String schoolBoard = card.select("div.comma").text();
					String schoolLocation = card.select("#root > div.school_container.college_listing > div:nth-child(2) > div.px-0.row > div.px-0.px-md-3.col-lg-9.col-md-8.col-sm-12 > div:nth-child(8) > div.schoolListing_card.position-relative > div.school_detail.d-flex > div.school_info > div.schoolList_Info.d-flex.align-items-center.gap-1.flex-wrap.mb-1.city_state_desktop_case > span:nth-child(1)").text();
					String schoolFees = card.select("#root > div.school_container.college_listing > div:nth-child(2) > div.px-0.row > div.px-0.px-md-3.col-lg-9.col-md-8.col-sm-12 > div:nth-child(8) > div.schoolListing_card.position-relative > div.school_detail.d-flex > div.school_info > div.schoolList_Info.d-flex.align-items-center.gap-1.flex-wrap.mb-1.city_state_desktop_case > span:nth-child(2) > strong").text();
					
					
					System.out.println("Name: "+ schoolName + 
							"|| Board: "+ schoolBoard +
							"|| fees: "+ schoolFees +
							"|| type: "+ schoolType +
							"|| Location: "+ schoolLocation );
							
					
				}
				
				if(pageNum == 1)hasData = false;
				
				
			}
			
			
			
			
			
			
			
			
		} catch (IOException e) {
			
			e.printStackTrace();
		}
	}

}
