package flow;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

public class MainApp {
    public static void main(String[] args) {
        String url = "https://www.policybazaar.com/term-insurance-plans/";

        try {
            Document doc = Jsoup.connect(url)
                    .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 "
                             + "(KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36")
                    .header("Accept", "text/html,application/xhtml+xml,application/xml;q=0.9,*/*;q=0.8")
	                .header("Accept-Language", "en-US,en;q=0.5")
                    .get();

            // Select all plan cards
            Elements plans = doc.select("div.top-plan-card");

            int count = 1;
            for (Element plan : plans) {
                String planName = plan.select("span.plan-name").text();
                String lifeCover = plan.select("div.life-cover p:nth-of-type(2)").text();
                String maxLimit = plan.select("div.life-cover p:nth-of-type(3)").text();
                String claim = plan.select("div.claim-settlement p:nth-of-type(2)").first() != null ?
                               plan.select("div.claim-settlement p:nth-of-type(2)").first().text() : "";
                String premium = plan.select("div.claim-settlement:contains(Premium Starting) p:nth-of-type(2)").text();

                System.out.println("--------------------------------------------------");
                System.out.println(count++ + ". " + planName);
                System.out.println("   Life Cover: " + lifeCover);
                System.out.println("   " + maxLimit);
                System.out.println("   Claim Settled: " + claim);
                System.out.println("   Premium Starting: " + premium);

                // Features
                Elements features = plan.select("ul.features li.features-items, ul.addon_features li.features-items");
                if (!features.isEmpty()) {
                    System.out.print("   Features: ");
                    for (int i = 0; i < features.size(); i++) {
                        System.out.print(features.get(i).text());
                        if (i < features.size() - 1) System.out.print(", ");
                    }
                    System.out.println();
                }
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
