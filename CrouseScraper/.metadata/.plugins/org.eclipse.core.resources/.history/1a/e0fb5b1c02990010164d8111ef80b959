package flow;

import org.json.JSONObject;
import org.jsoup.Connection;
import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.nodes.Element;
import org.jsoup.select.Elements;

public class MainTable {

    public static void main(String[] args) {

        // 1. Ye hai sahi API URL jahan se data aa raha hai
        String apiUrl = "https://www.policybazaar.com/services/get_health_plan_v2.php?group_id=2&show_plan_count=3&_=1758688994171";

        try {
            // 2. API URL se connect karke JSON response get karein (HTML ki jagah)
            // .ignoreContentType(true) zaroori hai kyunki response JSON hai, HTML nahi.
            String jsonResponseString = Jsoup.connect(apiUrl)
                    .ignoreContentType(true)
                    .userAgent("Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36")
                    .execute()
                    .body();

            // 3. String response ko JSON Object mein convert karein
            JSONObject jsonResponse = new JSONObject(jsonResponseString);

            // 4. JSON object se 'plan_content' key ki value nikalein, jisme hamara HTML hai
            String htmlContent = jsonResponse.getString("plan_content");

            // 5. Ab is HTML content ko Jsoup se parse karein
            Document doc = Jsoup.parse(htmlContent);

            // 6. Saare policy cards ko select karein (har card 'div.card' se represent hota hai)
            Elements policyCards = doc.select("div.card");

            System.out.println("Total Policies Found: " + policyCards.size());
            System.out.println("----------------------------------------");

            // 7. Har card se details nikalein
            for (Element card : policyCards) {
                // Insurer ka naam logo ke alt text se nikalein
                String insurerName = card.select("div.logo_top img").attr("alt");
                
                // Plan ka naam nikalein
                String planName = card.select("div.plan-name").text();

                // Cover amount nikalein
                String coverAmount = card.select("div.cover-price > div.label-value:nth-child(1) > div.value").text();

                // Monthly premium nikalein
                String monthlyPremium = card.select("div.cover-price > div.label-value:nth-child(2) > div.value").text();

                // Saare features nikalein
                Elements features = card.select("div.planFeatures > p");

                // Details print karein
                if (!planName.isEmpty()) {
                    System.out.println("Insurer: " + insurerName);
                    System.out.println("Plan Name: " + planName);
                    System.out.println("Cover Amount: " + coverAmount);
                    System.out.println("Starting Premium: " + monthlyPremium);
                    System.out.println("Features:");
                    for (Element feature : features) {
                        System.out.println("  - " + feature.text().trim());
                    }
                    System.out.println("----------------------------------------");
                }
            }

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}